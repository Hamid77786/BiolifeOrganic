@using BiolifeOrganic.Bll.ViewModels.Discount
@model List<DiscountViewModel>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Discounts</h4>
                <a class="btn btn-primary mb-3" asp-action="Create">Add Discount</a>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Percentage</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model ?? [])
                            {
                                <tr>
                                    <td>@item.Code</td>
                                    <td>@item.Percentage %</td>
                                    <td>@item.StartDate.ToShortDateString()</td>
                                    <td>@item.EndDate.ToShortDateString()</td>
                                    <td>@(item.IsActive ? "Yes" : "No")</td>
                                    <td>
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" onclick="deleteDiscount(@item.Id, this)">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteDiscount(id, element) {
        if(!confirm("Are you sure you want to delete this discount?")) return;

        fetch(`/Admin/Discount/Delete/${id}`, { method: 'POST' })
            .then(res => res.text())
            .then(() => element.parentNode.parentNode.remove())
            .catch(err => {
                console.error(err);
                alert('Error deleting discount!');
            });
    }
</script>
