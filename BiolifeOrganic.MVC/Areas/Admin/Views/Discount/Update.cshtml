@using BiolifeOrganic.Bll.ViewModels.Discount
@model UpdateDiscountViewModel

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Discount</h4>

                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label>Code</label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Percentage</label>
                        <input asp-for="Percentage" class="form-control" />
                        <span asp-validation-for="Percentage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>

                    <div class="form-check">
                        <input asp-for="OnlyForNewUsers" class="form-check-input" />
                        <label asp-for="OnlyForNewUsers" class="form-check-label">Only For New Users</label>
                    </div>

                    <div class="form-check">
                        <input asp-for="OnlyForExistingUsers" class="form-check-input" />
                        <label asp-for="OnlyForExistingUsers" class="form-check-label">Only For Existing Users</label>
                    </div>

                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">Is Active</label>
                    </div>

                    <div class="form-group">
                        <label>Max Usage Count</label>
                        <input asp-for="MaxUsageCount" class="form-control" />
                        <span asp-validation-for="MaxUsageCount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>Used Count</label>
                        <input asp-for="UsedCount" class="form-control" />
                        <span asp-validation-for="UsedCount" class="text-danger"></span>
                    </div>

                   

                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>


