@using BiolifeOrganic.Bll.ViewModels.Logo
@model UpdateLogoViewModel

<h4>Update Logo</h4>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Existing Logo</label><br />
        @if (!string.IsNullOrEmpty(Model.ExistingLogoUrl))
        {
            <img src="~/images/logos/@Model.ExistingLogoUrl" width="100" height="100" />
        }
    </div>

    <div class="mb-3">
        <label>New Logo File (optional)</label>
        <input asp-for="NewLogoFile" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
