@using BiolifeOrganic.Bll.ViewModels.Category
@model CreateCategoryViewModel

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Add Category</h4>

            <form asp-controller="Category" asp-action="Create" method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Category Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Category Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Category Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Category Icon (optional)</label>
                    <input asp-for="CategoryIcon" type="text" class="form-control" placeholder="Icon class or URL" />
                    <span asp-validation-for="CategoryIcon" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>
</div>
