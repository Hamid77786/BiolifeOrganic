@using BiolifeOrganic.Dll.DataContext.Entities
@model List<Category>
<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <a class="btn btn-primary" asp-controller="category" asp-action="create" >
                    Add 
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model??[])
                            {
                                <tr>
                                    <td><img src="~/images/@item.ImageUrl" width="100" height="100" /></td>
                                    <td>@item.Name</td>
                                    <td>
                                       <a class="btn btn-primary" asp-controller="category" asp-action="details" asp-route-id="@item.Id">Details</a>
                                       <a class="btn btn-warning" asp-controller="category" asp-action="update" asp-route-id="@item.Id">Update</a>
                                       <a class="btn btn-danger" onclick="deleteCategory(@item.Id,this)">Delete</a>
                                    </td>
                                  
                                </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    
    function deleteCategory(id,element){
        fetch(`/Admin/Category/Delete/${id}`,{
           method:`Post`}).
           then(response=>response.text()).
           then(data=>{
               element.parentNode.parentNode.remove();
           })
           .catch(err => {
            console.error(err);
            alert('Error for deleting!');
           
        });
    }
</script>