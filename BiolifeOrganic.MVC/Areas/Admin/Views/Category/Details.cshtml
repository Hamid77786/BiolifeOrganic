@using BiolifeOrganic.Bll.ViewModels.Category
@model CategoryViewModel

<div class="row">
    <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Details</h4>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Image</th>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width:300px; max-height:300px;" />
                                    }
                                    else
                                    {
                                        <span>—</span>
                                    }
                                </td>
                            </tr>

                            <tr>
                                <th>Name</th>
                                <td>@Model.Name</td>
                            </tr>

                            <tr>
                                <th>Icon</th>
                                <td>@(string.IsNullOrEmpty(Model.CategoryIcon) ? "—" : Model.CategoryIcon)</td>
                            </tr>

                            <tr>
                                <th>Products Count</th>
                                <td>@Model.Products.Count</td>
                            </tr>
                           

                        </tbody>
                    </table>
                </div>

                @if (Model.Products.Any())
                {
                    <hr />
                    <h5>Products in this Category</h5>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var product in Model.Products)
                        {
                            <div class="card" style="width: 150px;">
                                <img src="~/images/products/@product.ImageUrl" class="card-img-top" style="height:120px; object-fit:cover;" />
                                <div class="card-body p-2">
                                    <p class="card-title mb-0" style="font-size:14px;">@product.Name</p>
                                    <p class="mb-0" style="font-size:12px;">@product.OriginalPrice ₼</p>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
