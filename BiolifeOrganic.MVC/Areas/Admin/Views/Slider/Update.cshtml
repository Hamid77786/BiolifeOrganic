@using BiolifeOrganic.Bll.ViewModels.Slider
@model UpdateSliderViewModel

<h2>Update Slider</h2>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <!-- Title -->
    <div class="form-group mt-2">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- SubTitle -->
    <div class="form-group mt-2">
        <label asp-for="SubTitle">SubTitle</label>
        <input asp-for="SubTitle" class="form-control" />
        <span asp-validation-for="SubTitle" class="text-danger"></span>
    </div>

    <!-- Description -->
    <div class="form-group mt-2">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Button Text -->
    <div class="form-group mt-2">
        <label asp-for="ButtonText">Button Text</label>
        <input asp-for="ButtonText" class="form-control" />
        <span asp-validation-for="ButtonText" class="text-danger"></span>
    </div>

    <!-- Button Link -->
    <div class="form-group mt-2">
        <label asp-for="ButtonLink">Button Link</label>
        <input asp-for="ButtonLink" class="form-control" />
        <span asp-validation-for="ButtonLink" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label>HTML Content</label>
        <button type="button"
                class="btn btn-sm btn-secondary mb-2 insert-default-html"
                data-target="htmlContent">
            Insert Default HTML
        </button>
        <textarea asp-for="HtmlContent"
                  class="form-control"
                  rows="10"
                  id="htmlContent"></textarea>
        <span asp-validation-for="HtmlContent" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Image">Or upload image</label>
        <input asp-for="Image" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
        {
            <div class="mt-2">
                <p>Current Image:</p>
                <img src="~/images/sliders/@Model.ExistingImageUrl" width="200" />
            </div>
        }
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="DisplayOrder">Display Order</label>
        <input asp-for="DisplayOrder" min="0" max="10" class="form-control" />
    </div>

    <div class="form-check mt-2">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
