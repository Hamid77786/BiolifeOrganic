@using BiolifeOrganic.Bll.ViewModels.Order
@model List<OrderListViewModel>



<div class="page-contain shopping-cart">


    <div id="main-content" class="main-content">
        <div class="container">

            <div class="shopping-cart-container">
                <div class="row">
                    <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                        <h3 class="box-title">Your orders:</h3>
                        <table class="shop_table cart-form">
                            <thead>
                                <tr>
                                    <th class="product-price">Order number</th>
                                    <th class="product-price">Order date</th>
                                    <th class="product-price">Quantity</th>
                                    <th class="product-price">SubTotal</th>
                                    <th class="product-price">Discount Amount</th>
                                    <th class="product-price">Discount Percent</th>
                                    <th class="product-price">Discount Code</th>
                                    <th class="product-price">Total</th>
                                    <th class="product-price">Order Status</th>
                                    <th class="product-price">Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null || !Model.Any())
                                {
                                    <tr>
                                        <td colspan="9">No orders</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr class="cart_item">
                                            <td class="product-price">
                                                <a href="javascript:void(0);" class="order-toggle" data-order-id="@item.Id">
                                                    @item.OrderNumber
                                                </a>
                                            </td>
                                            <td class="product-price">
                                                @item.OrderDate.ToString("dd/MM/yyyy")
                                            </td>
                                            <td class="product-price">
                                                @item.ItemCount
                                            </td>
                                            <td class="product-price">
                                                @item.SubtotalAmount
                                            </td>
                                            <td class="product-price">
                                                @item.DiscountAmount
                                            </td>
                                            <td class="product-price">
                                                @(item.DiscountPercentage.HasValue ? item.DiscountPercentage.Value.ToString() : "0")
                                            </td>
                                            <td class="product-price">
                                                @(item.DiscountCode??"Not")
                                            </td>
                                            <td class="product-price">
                                                @item.TotalAmount
                                            </td>
                                            <td class="product-price">
                                                @item.Status
                                            </td>
                                            <td class="product-price">
                                                @if (item.Status == "OnHold")
                                                {
                                                    @Html.AntiForgeryToken()

                                                    <button class="btn btn-danger btn-sm"
                                                            onclick="deleteOrder(@item.Id, this)">
                                                        Delete
                                                    </button>

                                                    <a class="btn btn-primary btn-sm"
                                                       href="@Url.Action("EditShipping", "Order", new { orderId = item.Id })">
                                                        Edit Address
                                                    </a>

                                                }
                                                   

                                            </td>

                                        </tr>

                                        <tr class="order-details" id="details-@item.Id" style="display:none;">
                                            <td colspan="9">
                                                <div class="details-container"></div>
                                            </td>
                                        </tr>
                                    }
                                               
                                }
                                
                                
                                

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteOrder(orderId, button) {

        if (!confirm("Are you sure you want to delete this order?"))
            return;

        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        fetch('@Url.Action("Delete", "Order")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': token
            },
            body: new URLSearchParams({ id: orderId })
        })
        .then(res => res.json())
        .then(response => {
            if (response.success) {
                const row = button.closest('tr');
                const detailsRow = row.nextElementSibling;

                if (detailsRow && detailsRow.classList.contains('order-details')) {
                    detailsRow.remove();
                }
                row.remove();
            } else {
                alert(response.message);
            }
        })
        .catch(() => alert("Something went wrong"));
    }
</script>


                                                
                                                
                                                
                                                
                                                
                                                
                                                
                                                
                                                
                                                
                                                
                                               
                                               
                                                    
                                                
                                                
                                               



                               
                                   

                        
                    
                    
                    
                    
                    
                    
                    
                
                
                
                
               
            
            
            

        
        
        
    
    
    









                                                        















