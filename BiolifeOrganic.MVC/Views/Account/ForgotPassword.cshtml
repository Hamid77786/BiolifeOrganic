@model ForgotPasswordViewModel

<div class="page-contain login-page">

    <!-- Main content -->
    <div id="main-content" class="main-content">
        <div class="container">

            <div class="row">


               
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    
                    <div class="signin-container">
                        <h5 class="mb_24">Reset your password</h5>
                        <p class="mb_30">We will send you an email to reset your password link</p>
                        <form asp-controller="account" asp-action="forgotpassword" method="post">
                            <p class="form-row">
                                <label asp-for="Email">Email Address:<span class="requite">*</span></label>
                                <input asp-for="Email" class="txt-input">
                                <span asp-validation-for="Email"></span>
                            </p>
                            <p class="form-row wrap-btn">
                                <button class="btn btn-submit btn-bold" type="submit">Reset Password</button>
                            </p>
                           
                            
                        </form>

                    </div>
                </div>

                

            </div>

        </div>

    </div>
    
</div>

