 @model ChangePasswordViewModel

<div class="page-contain login-page">

    <!-- Main content -->
    <div id="main-content" class="main-content">
        <div class="container">

            <div class="row">

                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="signin-container">
                        <h5 class="mb_24">Change your password</h5>

                        <form asp-controller="account" asp-action="changepassword" method="post">
                            <p class="form-row">

                                <label asp-for="CurrentPassword">Current Password:<span class="requite">*</span></label>
                                <input type="password" asp-for="CurrentPassword"  class="txt-input">
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>


                            </p>
                            <p class="form-row">
                                <label asp-for="NewPassword">New Password:<span class="requite">*</span></label>
                                <input asp-for="NewPassword"  class="txt-input">
                                <span asp-validation-for="NewPassword" class="text-danger"></span>

                            </p>
                            
                            <p class="form-row">
                                <label asp-for="ConfirmPassword">Confirm Password:<span class="requite">*</span></label>
                                <input asp-for="ConfirmPassword"  class="txt-input">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            </p>
                           
                           
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <p class="form-row wrap-btn">
                                <button class="btn btn-submit btn-bold" type="submit">Confirm Change Password</button>
                            </p>

                        </form>
                    </div>
                </div>



            </div>

        </div>

    </div>

</div>