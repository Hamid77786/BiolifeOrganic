 @model ResetPasswordViewModel

<div class="page-contain login-page">

    <!-- Main content -->
    <div id="main-content" class="main-content">
        <div class="container">

            <div class="row">

                
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="signin-container">
                        <h5 class="mb_18">Reset Password</h5>
                        <p class="text_black-2">
                            Come up with a new password and make sure it is not similar to the ones you used previously!
                        </p>
                        <form asp-controller="account" asp-action="resetpassword" method="post">

                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="ResetPasswordToken" />

                            <p class="form-row">

                                <label asp-for="Password">Password:<span class="requite">*</span></label>
                                <input asp-for="Password" class="tf-field-input tf-input" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </p>
                            <p>
                                <label asp-for="ConfirmPassword">ConfirmPassword:<span class="requite">*</span></label>
                            </p>
                            <p>
                                <input asp-for="ConfirmPassword" class="tf-field-input tf-input" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </p>

                               
                           
                            <p class="form-row wrap-btn">

                                <button class="btn btn-submit btn-bold" type="submit">Reset Password</button>
                            </p>
                        </form>
                    </div>
                </div>

               
            </div>

        </div>

    </div>

</div>